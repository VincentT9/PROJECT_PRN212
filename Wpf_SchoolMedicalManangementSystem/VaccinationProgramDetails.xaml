<Window x:Class="Wpf_SchoolMedicalManangementSystem.VaccinationProgramDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Chương trình Tiêm chủng" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="← Quay lại" Width="100" Height="35"
                    Background="#6C757D" Foreground="White" FontWeight="Bold"
                    Click="Back_Click"/>

            <TextBlock Grid.Column="1" x:Name="HeaderText" Text="Chi tiết Chương trình" 
                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="btnEditProgram" Content="Sửa chương trình" Width="140" Height="35" Margin="0,0,10,0"
                        Background="#FFC107" Foreground="Black" FontWeight="Bold"
                        Click="EditProgram_Click"/>
                <Button x:Name="btnDeleteProgram" Content="Xóa chương trình" Width="140" Height="35"
                        Background="#DC3545" Foreground="White" FontWeight="Bold"
                        Click="DeleteProgram_Click"/>
            </StackPanel>
        </Grid>

        <!-- Program Info -->
        <GroupBox Grid.Row="1" Header="Thông tin chương trình" Margin="0,0,0,20">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Tên chương trình:" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ProgramNameText" FontSize="14"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Loại chương trình:" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="ProgramTypeText" FontSize="14"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Trạng thái:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="StatusText" FontSize="14" Margin="0,10,0,0"/>

                <Label Grid.Row="1" Grid.Column="2" Content="Ngày tạo:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="CreateDateText" FontSize="14" Margin="0,10,0,0"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Mô tả:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="DescriptionText" 
                           FontSize="14" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>

        <!-- Schedules -->
        <GroupBox Grid.Row="2" Header="Danh sách lịch tiêm/khám" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Schedule Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="btnAddSchedule" Content="Thêm lịch mới" Width="120" Height="30" Margin="0,0,10,0"
                            Background="#28A745" Foreground="White" FontWeight="Bold"
                            Click="AddSchedule_Click"/>
                    <Button Content="Xem lịch tổng quan" Width="140" Height="30" Margin="0,0,10,0"
                            Background="#17A2B8" Foreground="White" FontWeight="Bold"
                            Click="ViewScheduleOverview_Click"/>
                </StackPanel>

                <!-- Schedules DataGrid -->
                <DataGrid Grid.Row="1" x:Name="SchedulesDataGrid" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True"
                          GridLinesVisibility="All" HeadersVisibility="All"
                          AlternatingRowBackground="#F8F9FA">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ngày" Binding="{Binding ScheduledDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                        <DataGridTextColumn Header="Địa điểm" Binding="{Binding Location}" Width="200"/>
                        <DataGridTextColumn Header="Ghi chú" Binding="{Binding Notes}" Width="300"/>
                        <DataGridTextColumn Header="Số học sinh" Binding="{Binding StudentCount}" Width="100"/>
                        <DataGridTemplateColumn Header="Thao tác" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Xem học sinh" Margin="2" Click="ViewStudents_Click"
                                                Background="#17A2B8" Foreground="White" FontSize="11" Width="80"/>
                                        <Button Content="Sửa" Margin="2" Click="EditSchedule_Click"
                                                Background="#FFC107" Foreground="Black" FontSize="11" Width="50"/>
                                        <Button Content="Xóa" Margin="2" Click="DeleteSchedule_Click"
                                                Background="#DC3545" Foreground="White" FontSize="11" Width="50"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Statistics -->
        <GroupBox Grid.Row="3" Header="Thống kê" Margin="0,0,0,0">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#E3F2FD" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Tổng số lịch" FontSize="12" Foreground="#1976D2"/>
                        <TextBlock x:Name="TotalSchedulesText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#1976D2"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#E8F5E8" Padding="15" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="Đã hoàn thành" FontSize="12" Foreground="#388E3C"/>
                        <TextBlock x:Name="CompletedSchedulesText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#388E3C"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#FFF3E0" Padding="15" Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="Đang thực hiện" FontSize="12" Foreground="#F57C00"/>
                        <TextBlock x:Name="InProgressSchedulesText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F57C00"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="#FCE4EC" Padding="15" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Sắp tới" FontSize="12" Foreground="#C2185B"/>
                        <TextBlock x:Name="UpcomingSchedulesText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#C2185B"/>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>
    </Grid>
</Window> 