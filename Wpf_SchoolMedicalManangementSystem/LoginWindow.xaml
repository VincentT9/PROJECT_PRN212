<Window x:Class="Wpf_SchoolMedicalManangementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FPTMED - Đăng nhập" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF2E86AB">

    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#FF5CB85C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Width="300" Margin="20">
            
            <!-- Logo -->
            <TextBlock Text="FPTMED" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,40">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" BlurRadius="5"/>
                </TextBlock.Effect>
            </TextBlock>
            
            <!-- Username -->
            <TextBlock Text="Tên truy cập:" 
                       Foreground="White" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="txtUsername" 
                     Style="{StaticResource RoundedTextBox}"
                     Margin="0,0,0,20"/>
            
            <!-- Password -->
            <TextBlock Text="Mật khẩu:" 
                       Foreground="White" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="txtPassword" 
                         Style="{StaticResource RoundedPasswordBox}"
                         Margin="0,0,0,20"/>
            
            <!-- Remember me -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <CheckBox x:Name="chkRememberMe" 
                          Content="Lưu thông tin" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Login Button -->
            <Button x:Name="btnLogin" 
                    Content="Đăng nhập" 
                    Style="{StaticResource RoundedButton}"
                    Width="260"
                    Height="45"
                    Click="btnLogin_Click"
                    Margin="0,0,0,20"/>
            
            <!-- Register link -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Không có tài khoản? " Foreground="White"/>
                <TextBlock x:Name="txtRegister" 
                           Text="Đăng ký" 
                           Foreground="#FFFFE066" 
                           TextDecorations="Underline"
                           Cursor="Hand"
                           MouseDown="txtRegister_MouseDown"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>