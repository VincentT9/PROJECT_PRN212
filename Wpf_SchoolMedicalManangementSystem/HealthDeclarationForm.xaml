<Window x:Class="Wpf_SchoolMedicalManangementSystem.HealthDeclarationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Khai báo Sức khỏe"
        Height="700"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   x:Name="txtTitle"
                   Text="KHAI BÁO SỨC KHỎE HỌC SINH"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="#2E86AB"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Student Selection -->
                <Border Background="#E3F2FD"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="THÔNG TIN HỌC SINH"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   Foreground="#1976D2"/>
                        <StackPanel>
                            <TextBlock Text="Chọn học sinh:*"
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbStudent"
                                      Height="35"
                                      Padding="8"
                                      DisplayMemberPath="FullName"
                                      SelectedValuePath="Id"
                                      BorderBrush="#DDD"
                                      BorderThickness="1"
                                      SelectionChanged="CmbStudent_SelectionChanged"/>
                        </StackPanel>

                        <!-- Student Info Display -->
                        <Grid x:Name="pnlStudentInfo"
                              Margin="0,10,0,0"
                              Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Mã HS:"
                                           FontSize="12"
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="txtStudentCode"
                                           FontSize="12"
                                           Foreground="#666"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Lớp:"
                                           FontSize="12"
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="txtStudentClass"
                                           FontSize="12"
                                           Foreground="#666"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Ngày sinh:"
                                           FontSize="12"
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="txtStudentBirth"
                                           FontSize="12"
                                           Foreground="#666"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Physical Measurements -->
                <Border Background="#F3E5F5"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="CHỈ SỐ CƠ THỂ"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   Foreground="#7B1FA2"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Height -->
                            <StackPanel Grid.Column="0"
                                        Margin="0,0,10,0">
                                <TextBlock Text="Chiều cao (cm):"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtHeight"
                                         Height="35"
                                         Padding="8"
                                         BorderBrush="#DDD"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <!-- Weight -->
                            <StackPanel Grid.Column="1"
                                        Margin="0,0,10,0">
                                <TextBlock Text="Cân nặng (kg):"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtWeight"
                                         Height="35"
                                         Padding="8"
                                         BorderBrush="#DDD"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <!-- Blood Type -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Nhóm máu:"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbBloodType"
                                          Height="35"
                                          Padding="8"
                                          BorderBrush="#DDD"
                                          BorderThickness="1"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Health Conditions -->
                <Border Background="#E8F5E8"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="TÌNH TRẠNG SỨC KHỎE"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   Foreground="#388E3C"/>

                        <!-- Allergies -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Dị ứng:"
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtAllergies"
                                     Height="60"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Chronic Diseases -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Bệnh mãn tính:"
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtChronicDiseases"
                                     Height="60"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Past Medical History -->
                        <StackPanel>
                            <TextBlock Text="Tiền sử bệnh:"
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPastMedicalHistory"
                                     Height="80"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Vision and Hearing -->
                <Border Background="#FFF3E0"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="THỊ LỰC &amp; THÍNH LỰC"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   Foreground="#F57C00"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Vision Left -->
                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,10,15">
                                <TextBlock Text="Thị lực mắt trái:"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbVisionLeft"
                                          Height="35"
                                          Padding="8"
                                          BorderBrush="#DDD"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- Vision Right -->
                            <StackPanel Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0,0,0,15">
                                <TextBlock Text="Thị lực mắt phải:"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbVisionRight"
                                          Height="35"
                                          Padding="8"
                                          BorderBrush="#DDD"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- Hearing Left -->
                            <StackPanel Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,0,10,0">
                                <TextBlock Text="Thính lực tai trái:"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbHearingLeft"
                                          Height="35"
                                          Padding="8"
                                          BorderBrush="#DDD"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- Hearing Right -->
                            <StackPanel Grid.Row="1"
                                        Grid.Column="1">
                                <TextBlock Text="Thính lực tai phải:"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbHearingRight"
                                          Height="35"
                                          Padding="8"
                                          BorderBrush="#DDD"
                                          BorderThickness="1"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Vaccination History -->
                <Border Background="#FCE4EC"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="LỊCH SỬ TIÊM CHỦNG"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   Foreground="#C2185B"/>

                        <StackPanel>
                            <TextBlock Text="Lịch sử tiêm chủng:"
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtVaccinationHistory"
                                     Height="80"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Other Notes -->
                <Border Background="#F5F5F5"
                        CornerRadius="5"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="GHI CHÚ KHÁC"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   Foreground="#616161"/>

                        <StackPanel>
                            <TextBlock Text="Ghi chú thêm:"
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtOtherNotes"
                                     Height="80"
                                     Padding="8"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="btnSave"
                    Content="Lưu"
                    Padding="25,10"
                    Margin="0,0,10,0"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnSave_Click"/>
            <Button x:Name="btnCancel"
                    Content="Hủy"
                    Padding="25,10"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
