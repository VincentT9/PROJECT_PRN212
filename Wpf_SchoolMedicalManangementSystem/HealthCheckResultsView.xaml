<Window x:Class="Wpf_SchoolMedicalManangementSystem.HealthCheckResultsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SchoolMedicalManangementSystem"
        mc:Ignorable="d"
        Title="HealthCheckResultsView" Height="683" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <!-- Chọn lịch -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Lịch khám:" VerticalAlignment="Center"/>
            <ComboBox x:Name="ScheduleComboBox" Width="400" Margin="10,0"
                      DisplayMemberPath="ScheduledDate"
                      SelectionChanged="ScheduleComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Danh sách học sinh -->
        <GroupBox Header="Danh sách học sinh" Grid.Row="1" Margin="0,0,0,10">
            <ListView x:Name="StudentListView"
                      SelectionChanged="StudentListView_SelectionChanged"
                      DisplayMemberPath="FullName"/>
        </GroupBox>

        <!-- Ghi nhận kết quả -->
        <GroupBox Header="Kết quả khám sức khỏe" Grid.Row="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="Chiều cao (cm):"/>
                    <TextBox x:Name="HeightTextBox"/>

                    <TextBlock Text="Cân nặng (kg):"/>
                    <TextBox x:Name="WeightTextBox"/>

                    <TextBlock Text="Thị lực trái/phải:"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="VisionLeftTextBox" Width="80" Margin="0,0,10,0"/>
                        <TextBox x:Name="VisionRightTextBox" Width="80"/>
                    </StackPanel>

                    <TextBlock Text="Thính lực trái/phải:"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="HearingLeftTextBox" Width="80" Margin="0,0,10,0"/>
                        <TextBox x:Name="HearingRightTextBox" Width="80"/>
                    </StackPanel>

                    <TextBlock Text="Huyết áp (Tâm thu / Tâm trương):"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="BloodPressureSysTextBox" Width="80" Margin="0,0,10,0"/>
                        <TextBox x:Name="BloodPressureDiaTextBox" Width="80"/>
                    </StackPanel>

                    <TextBlock Text="Nhịp tim (bpm):"/>
                    <TextBox x:Name="HeartRateTextBox"/>

                    <TextBlock Text="Kết quả răng miệng:"/>
                    <TextBox x:Name="DentalCheckupResultTextBox"/>

                    <TextBlock Text="Kết quả khác:"/>
                    <TextBox x:Name="OtherResultsTextBox"/>

                    <TextBlock Text="Dấu hiệu bất thường:"/>
                    <TextBox x:Name="AbnormalSignsTextBox"/>

                    <TextBlock Text="Khuyến nghị:"/>
                    <TextBox x:Name="RecommendationsTextBox"/>

                    <Button Content="Lưu kết quả" Click="SaveButton_Click" Margin="0,10,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
