<UserControl x:Class="Wpf_SchoolMedicalManangementSystem.ParentDashboardHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_SchoolMedicalManangementSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F8FBFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Left: Text Content -->
        <StackPanel Grid.Column="0" Margin="100,0,61,0" VerticalAlignment="Center">
            <TextBlock Text="Y TẾ HỌC ĐƯỜNG CHẤT LƯỢNG CAO"
                       FontWeight="Bold"
                       FontSize="16"
                       Foreground="White"
                       Background="#2196F3"
                       Padding="12,4"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,24"
                       TextWrapping="Wrap"/>
            <TextBlock Width="1204">
                <Run Text="Chăm sóc " FontSize="60" FontWeight="Bold" Foreground="#222"/>
                <Run Text="sức khỏe" FontSize="60" FontWeight="Bold" Foreground="#2196F3"/>
                <Run Text=" học đường toàn diện" FontSize="60" FontWeight="Bold" Foreground="#222"/>
            </TextBlock>
            <TextBlock Text="Hệ thống quản lý y tế học đường thông minh, giúp theo dõi sức khỏe và phòng ngừa dịch bệnh cho học sinh một cách hiệu quả."
                       FontSize="20"
                       Foreground="#555"
                       Margin="0,24,0,32"
                       TextWrapping="Wrap"/>
            <Button Content="Khám phá ngay"
                    Width="180"
                    Height="56"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="20"
                    HorizontalAlignment="Left"
                    Cursor="Hand"/>
        </StackPanel>
        <!-- Right: Image -->
        <Border Grid.Column="1"
                Margin="0,60,100,60"
                CornerRadius="32"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
            <Image Source="https://cdn.fpt-is.com/vi/asian-doctor-with-stethoscope-around-neck-sitting-office-working-computer-scaled.jpg"
                   Width="600"
                   Height="400"
                   Stretch="UniformToFill"
                   ClipToBounds="True"/>
        </Border>
    </Grid>

</UserControl>
