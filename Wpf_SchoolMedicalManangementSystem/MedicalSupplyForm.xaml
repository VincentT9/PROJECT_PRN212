<Window x:Class="Wpf_SchoolMedicalManangementSystem.MedicalSupplyForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Sửa Vật tư Y tế" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" x:Name="HeaderText" Text="Thêm vật tư mới" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- Form -->
        <GroupBox Grid.Row="1" Header="Thông tin vật tư" Margin="0,0,0,20">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Tên vật tư:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="SupplyNameTextBox" 
                         Margin="0,5" Padding="8,6" FontSize="14"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Loại vật tư:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="SupplyTypeComboBox" 
                          Margin="0,10,5,0" Padding="8,6" FontSize="14">
                    <ComboBoxItem Content="Thuốc" IsSelected="True"/>
                    <ComboBoxItem Content="Thiết bị y tế"/>
                    <ComboBoxItem Content="Vật tư sơ cứu"/>
                    <ComboBoxItem Content="Khác"/>
                </ComboBox>

                <Label Grid.Row="2" Grid.Column="0" Content="Số lượng:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="QuantityTextBox" 
                         Margin="0,10,5,0" Padding="8,6" FontSize="14"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Đơn vị:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="UnitTextBox" 
                         Margin="0,10,5,0" Padding="8,6" FontSize="14"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Nhà cung cấp:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="SupplierTextBox" 
                         Margin="0,10,5,0" Padding="8,6" FontSize="14"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Hình ảnh:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,10,5,0">
                    <TextBox x:Name="ImageTextBox" Width="300" Padding="8,6" FontSize="14" Margin="0,0,10,0"/>
                    <Button Content="Chọn ảnh" Width="100" Height="30" Click="ChooseImage_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Lưu" Width="120" Height="35" Margin="0,0,15,0" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    Click="Save_Click"/>
            <Button Content="Hủy" Width="120" Height="35" 
                    Background="#6C757D" Foreground="White" FontWeight="Bold"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 