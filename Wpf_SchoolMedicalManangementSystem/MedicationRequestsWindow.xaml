<Window x:Class="Wpf_SchoolMedicalManangementSystem.MedicationRequestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SchoolMedicalManangementSystem"
        mc:Ignorable="d"
        Title="MedicationRequestsWindow" Height="600" Width="1000">
    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#0D4C92" Grid.Column="0">
            <TextBlock Text="Quản trị viên" Foreground="White" FontSize="18" Margin="10"/>
            <Button Content="Quản lý học sinh" Style="{StaticResource SidebarButtonStyle}" />
            <Button Content="Quản lý người dùng" Style="{StaticResource SidebarButtonStyle}" />
            <Button Content="Kho vật tư" Style="{StaticResource SidebarButtonStyle}" />
            <TextBlock Text="HOẠT ĐỘNG Y TẾ" Foreground="White" Margin="10,20,10,10" />
            <Button Content="Sự kiện y tế" Style="{StaticResource SidebarButtonStyle}" />
            <Button Content="Hồ sơ sức khỏe" Style="{StaticResource SidebarButtonStyle}" />
            <TextBlock Text="THUỐC VÀ TIÊM PHÒNG" Foreground="White" Margin="10,20,10,10" />
            <Button Content="Quản lý thuốc" Background="#1565C0" Foreground="White" FontWeight="Bold"/>
            <Button Content="Chương trình tiêm phòng" Style="{StaticResource SidebarButtonStyle}" />
        </StackPanel>

        <!-- Main content -->
        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Quản lý thuốc" FontSize="24" FontWeight="Bold" />
            <TextBlock Text="Theo dõi và quản lý việc phát thuốc cho học sinh" FontSize="14" Foreground="Gray" Margin="0,0,0,10"/>

            <!-- Tab Selection Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Thuốc cần cho uống" Margin="5" Click="LoadToday_Click"/>
                <Button Content="Yêu cầu đã xác nhận" Margin="5" Click="LoadConfirmed_Click"/>
                <Button Content="Yêu cầu chờ xử lý" Margin="5" Click="LoadPending_Click"/>
                <Button Content="Yêu cầu hoàn thành và quá hạn" Margin="5" Click="LoadOverdue_Click"/>
            </StackPanel>

            <!-- ListView để hiển thị dữ liệu -->
            <ListView x:Name="lvMedications" FontSize="16" Margin="10" Background="#F8FBFF" BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tên thuốc" DisplayMemberBinding="{Binding MedicationName}" Width="150"/>
                        <GridViewColumn Header="Học sinh" DisplayMemberBinding="{Binding Student.FullName}" Width="150"/>
                        <GridViewColumn Header="Liều dùng" DisplayMemberBinding="{Binding Dosage}" Width="100"/>
                        <GridViewColumn Header="Hướng dẫn" DisplayMemberBinding="{Binding Instructions}" Width="200"/>
                        <GridViewColumn Header="Trạng thái">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StatusText}" 
                                   Foreground="{Binding StatusColor}" 
                                   FontWeight="Bold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
