<Window x:Class="Wpf_SchoolMedicalManangementSystem.ReasonPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SchoolMedicalManangementSystem"
        mc:Ignorable="d"
        Title="ReasonPopup" Height="206" Width="359">
    <StackPanel Margin="20">
        <TextBlock Text="Nhập lý do:" FontWeight="Bold"/>
        <TextBox x:Name="txtReason" Height="60" TextWrapping="Wrap" Margin="0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="70" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="70" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
