<Page x:Class="Wpf_SchoolMedicalManangementSystem.VaccinationProgramView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Chương trình Tiêm chủng" Height="Auto" Width="Auto">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with background -->
        <Border Grid.Row="0" Background="#FF2E86AB" Padding="20,15">
            <Grid>
                <TextBlock Text="💉 Quản lý Chương trình Tiêm chủng" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White"/>
            </Grid>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="SearchBox" Grid.Column="0" 
                         Text="Tìm kiếm theo tên chương trình..." 
                         Margin="0,0,10,0" Padding="10,8"
                         TextChanged="SearchBox_TextChanged"/>

                <!-- Filter Controls -->
                <ComboBox x:Name="TypeFilter" Grid.Column="1" Width="150" Margin="0,0,10,0"
                          SelectionChanged="Filter_SelectionChanged">
                    <ComboBoxItem Content="Tất cả loại" IsSelected="True"/>
                    <ComboBoxItem Content="Tiêm chủng"/>
                    <ComboBoxItem Content="Khám sức khỏe"/>
                </ComboBox>

                <ComboBox x:Name="StatusFilter" Grid.Column="2" Width="150" Margin="0,0,10,0"
                          SelectionChanged="Filter_SelectionChanged">
                    <ComboBoxItem Content="Tất cả trạng thái" IsSelected="True"/>
                    <ComboBoxItem Content="Đã lên kế hoạch"/>
                    <ComboBoxItem Content="Đang thực hiện"/>
                    <ComboBoxItem Content="Đã hoàn thành"/>
                    <ComboBoxItem Content="Đã hủy"/>
                </ComboBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button x:Name="btnCreateProgram" Content="➕ Thêm chương trình" Click="CreateProgram_Click" 
                            Width="150" Height="35" Margin="0,0,10,0"
                            Background="#FF5CB85C" Foreground="White" FontWeight="Bold"/>
                    <Button Content="🔄 Làm mới" Click="Refresh_Click" 
                            Width="100" Height="35"
                            Background="#FF2E86AB" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="ProgramsDataGrid" Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="White"
                  AlternatingRowBackground="#FFF5F5F5"
                  Margin="0"
                  BorderThickness="0"
                  HorizontalGridLinesBrush="#FFEEEEEE"
                  RowHeight="40">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên chương trình" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Loại chương trình" Binding="{Binding TypeDisplay}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusDisplay}" Width="*"/>
                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding CreateAt, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                <DataGridTextColumn Header="Ngày cập nhật" Binding="{Binding UpdateAt, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                <DataGridTemplateColumn Header="Thao tác" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="🔎 Chi tiết" Margin="2" Click="ViewDetails_Click"
                                        Background="#FF17A2B8" Foreground="White" FontSize="11"/>
                                <Button Content="✏️ Sửa" Margin="2" Click="EditProgram_Click"
                                        Background="#FFFFC107" Foreground="Black" FontSize="11"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,12"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
    </Grid>
</Page>
