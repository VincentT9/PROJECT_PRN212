<Window x:Class="Wpf_SchoolMedicalManangementSystem.VaccinationProgramView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Chương trình Tiêm chủng" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Quản lý Chương trình Tiêm chủng" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox x:Name="SearchBox" Grid.Column="0" 
                     Text="Tìm kiếm theo tên chương trình..." 
                     Margin="0,0,10,0" Padding="10,8"
                     TextChanged="SearchBox_TextChanged"/>

            <!-- Filter Controls -->
            <ComboBox x:Name="TypeFilter" Grid.Column="1" Width="150" Margin="0,0,10,0"
                      SelectionChanged="Filter_SelectionChanged">
                <ComboBoxItem Content="Tất cả loại" IsSelected="True"/>
                <ComboBoxItem Content="Tiêm chủng"/>
                <ComboBoxItem Content="Khám sức khỏe"/>
            </ComboBox>

            <ComboBox x:Name="StatusFilter" Grid.Column="2" Width="150" Margin="0,0,10,0"
                      SelectionChanged="Filter_SelectionChanged">
                <ComboBoxItem Content="Tất cả trạng thái" IsSelected="True"/>
                <ComboBoxItem Content="Đã lên kế hoạch"/>
                <ComboBoxItem Content="Đang thực hiện"/>
                <ComboBoxItem Content="Đã hoàn thành"/>
                <ComboBoxItem Content="Đã hủy"/>
            </ComboBox>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="3" Orientation="Horizontal">
                <Button Content="Thêm chương trình" Click="CreateProgram_Click" 
                        Width="150" Height="35" Margin="0,0,10,0"
                        Background="#007ACC" Foreground="White" FontWeight="Bold"/>
                <Button Content="Làm mới" Click="Refresh_Click" 
                        Width="100" Height="35"
                        Background="#28A745" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <DataGrid x:Name="ProgramsDataGrid" Grid.Row="2" 
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  GridLinesVisibility="All" HeadersVisibility="All"
                  AlternatingRowBackground="#F8F9FA">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên chương trình" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="300"/>
                <DataGridTextColumn Header="Loại chương trình" Binding="{Binding TypeDisplay}" Width="150"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusDisplay}" Width="150"/>
                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding CreateAt, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Ngày cập nhật" Binding="{Binding UpdateAt, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTemplateColumn Header="Thao tác" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Xem chi tiết" Margin="2" Click="ViewDetails_Click"
                                        Background="#17A2B8" Foreground="White" FontSize="11"/>
                                <Button Content="Sửa" Margin="2" Click="EditProgram_Click"
                                        Background="#FFC107" Foreground="Black" FontSize="11"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
